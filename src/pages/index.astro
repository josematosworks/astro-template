---
import '@/styles/globals.css';
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/button.tsx';
import { ArrowRight, Play } from 'lucide-react';
---

<Layout title="Astro Template">
  <main class="flex flex-col items-center justify-center h-screen">
    <section class="mb-32 pt-32">
      <div class="container">
        <div class="relative pb-16">
          <div
            class="magicpattern absolute inset-x-0 top-0 -z-10 flex h-full w-full items-center justify-center opacity-100"
          >
          </div>
          <a
            href="#"
            class="mx-auto flex w-fit items-center gap-2 rounded-lg bg-zinc-100 p-3 sm:rounded-full sm:py-1 sm:pl-1 sm:pr-3"
          >
            <div
              class="items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-zinc-900 text-white hover:bg-zinc-900/80 hidden sm:block"
            >
              New Release
            </div>
            <p class="flex items-center gap-1 text-sm">
              Get started with our new product release today<svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-chevron-right mt-0.5 size-4 shrink-0"
              >
                <path d="m9 18 6-6-6-6"></path>
              </svg>
            </p>
          </a>
          <h1 class="mx-auto my-5 max-w-screen-lg text-balance text-center text-3xl md:text-5xl">
            This may be the start of something amazing
          </h1>
          <p class="mx-auto max-w-screen-md text-center text-sm text-zinc-600 md:text-base">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quia possimus fugit ab cumque
            consequuntur pariatur provident? Nulla consequuntur nisi eum!
          </p>
          <div class="mt-8 flex items-center justify-center gap-3">
            <Button>
              Get Started
              <ArrowRight class="ml-2 size-4" />
            </Button>
            <Button variant="outline">
              <Play class="mr-2 size-4" /> Watch Demo
            </Button>
          </div>
          <div class="mt-5 flex justify-center">
            <a
              href="#"
              class="flex items-center gap-1 border-b border-dashed text-sm hover:border-solid hover:border-primary"
              >Schedule a call<svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-chevron-right size-3.5"
              >
                <path d="m9 18 6-6-6-6"></path>
              </svg></a
            >
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
